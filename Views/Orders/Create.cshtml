@model ATZ_Tech_MVC.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1 class="p-3">Create</h1>

<h4 class="p-3 bg-info">Order</h4>
<hr />
<div class="row ml-lg-5 bg-light p-5">
    <div class="col-md-4 mt-5 ">
        <form class="" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserID" class="control-label text-dark"></label>
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label text-dark"></label>
                <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <img class="img-fluid" src="~/img/orders.jpg" />

    </div>
</div>

<div>
    <a class="text-white" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
