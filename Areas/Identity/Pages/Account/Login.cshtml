@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row ml-5 mr-5 bg-light bg-secondary">
    <div class="col-lg-6 offset-lg-3 p-lg-5  text-dark">
        <section>
            <form class="" id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="text-dark" asp-for="Input.Email "></label>
                    <input asp-for="Input.Email" class="form-control  text-dark" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="text-dark" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control  text-dark" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group text-dark">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                 
                </div>
            </form>
        </section>
    </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
