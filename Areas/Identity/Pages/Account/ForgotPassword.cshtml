@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1>@ViewData["Title"]</h1>
<h4>Enter your email.</h4>
<hr />

<div class="row ml-5 mr-5 bg-light bg-secondary">   @*custom changes*@ 
    <div class="col-lg-6 offset-lg-3 p-lg-5  text-dark">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="text-dark" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control text-dark" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
